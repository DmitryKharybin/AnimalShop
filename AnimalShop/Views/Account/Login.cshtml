@model AnimalShop.Models.Login


<p class="text-danger text-center">@TempData["loginError"]</p>



<div class="my_container">
    <input type="hidden" id="page_identifier" value="create_animal" />
    <div class="row justify-content-center">
        
        <div class="col-3">
            <form enctype="multipart/form-data" asp-action="Login" method="post">
                <div class="form-group">

                    <div class="form-floating mt-3">
                        <input asp-for="@Model.Username" class="form-control" placeholder="name"/>
                        <label class="text-secondary" asp-for="@Model.Username">UserName</label>
                        <span asp-validation-for="@Model.Username" class="text-danger" data-val ="false"></span>
                    </div>

                </div>

              

                <div class="form-group mt-3">
                    <div class="form-floating">
                        <input class="form-control h-100" asp-for="@Model.Password" placeholder="Password" />
                        <label class="text-secondary" asp-for="@Model.Password">Password</label>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                </div>

               <br />

                <span><button type="submit" class="btn btn-outline-info bi bi-key">Login</button></span>
                <span><a class="btn btn-outline-primary  bi bi-file-earmark-person" asp-action="Register">Register</a></span>
            </form>
        </div>

    </div>
</div>

