@model AnimalShop.Models.Register



<p class="text-danger text-center">@TempData["registrationError"]</p>




<div class="my_container">
    <input type="hidden" id="page_identifier" value="create_animal" />
    <div class="row justify-content-center">
        <p class="text-center">Create Your account</p>
        <div class="col-3">
            <form enctype="multipart/form-data" asp-action="Register" method="post">
                <div class="form-group">

                    <div class="form-floating mt-3">
                        <input asp-for="@Model.Username" class="form-control" placeholder="name"/>
                        <label class="text-secondary" asp-for="@Model.Username">UserName</label>
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>

                </div>



                <div class="form-group mt-3">
                    <div class="form-floating">
                        <input class="form-control h-100" asp-for="@Model.Password" placeholder="Password" />
                        <label class="text-secondary" asp-for="@Model.Password">Password</label>
                        <span asp-validation-for="@Model.Password" class="text-warning"></span>
                    </div>

                </div>

                <br />

                <button type="submit" class="btn btn-outline-info bi bi-check2-square">Register</button>

            </form>
        </div>

        <div>
            @if (ViewBag.Message != null)
            {
                <p class="text-center text-danger">@ViewBag.Message</p>
            }
        </div>

    </div>
</div>

